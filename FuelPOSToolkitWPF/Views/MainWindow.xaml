<Window x:Class="FuelPOSToolkitWPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        xmlns:core="clr-namespace:FuelPOSToolkitWPF.Core;assembly=FuelPOSToolkitWPF.Core"
        Title="{Binding Title}" Height="450" MinHeight="550" MinWidth="550" Width="550"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Menu DockPanel.Dock="Top" FontSize="12">
            <MenuItem Header="_File">
                <MenuItem Header="E_xit" Command="{Binding ExitCommand}" />
            </MenuItem>
            <MenuItem Header="_Access">
                <MenuItem Header="_Log Out" />
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Stations" Command="{Binding NavigateCommand}" CommandParameter="StationView" />
                <MenuItem Header="FuelPOS _Hardware" Command="{Binding NavigateCommand}" CommandParameter="HardwareView" />
            </MenuItem>
            <MenuItem Header="About">

            </MenuItem>
        </Menu>
        <ContentControl prism:RegionManager.RegionName="{x:Static core:RegionNames.StatusBarRegion}" DockPanel.Dock="Bottom" />
        <ContentControl prism:RegionManager.RegionName="{x:Static core:RegionNames.ContentRegion}" />
    </DockPanel>
</Window>