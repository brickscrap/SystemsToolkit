@page "/stations"
@inject IStationEndpoint stationEndpoint
@attribute [Authorize]

<TopBar>
    @if (StationModels is not null)
    {
        <IndividualStationSelector OnStationSelect="OnStationSelected" />
    }
</TopBar>
<ContentWrapper>
    @if (StationModels is null)
    {
        <LoadingBar />
    }
    else
    {
        @if (SelectedStation is not null)
        {
            <StationInfo Station="SelectedStation" />
        }
    }
</ContentWrapper>




@code {
    public List<StationModel> StationModels { get; set; }
    public StationModel SelectedStation { get; set; }

    protected override async Task OnInitializedAsync()
    {
        StationModels = await stationEndpoint.GetAll();
    }

    private void OnStationSelected(StationModel station)
    {
        SelectedStation = station;
    }

    private async Task<IEnumerable<StationModel>> SearchStations(string searchText)
    {
        return await Task.FromResult(StationModels
            .Where(x =>
                x.Name.ToLower().Contains(searchText.ToLower()) ||
                x.Id.ToLower().Contains(searchText.ToLower()) ||
                x.Company.ToLower().Contains(searchText.ToLower())).ToList());
    }
}
